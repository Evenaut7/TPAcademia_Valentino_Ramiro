@inherits LayoutComponentBase
@* Importe la navegación customizada *@
@inject NavigationManager NavManager
@using VistaWeb

<div class="page">
    <div class="sidebar">
        <NavMenuAdmin /> @* Componente de Barra Lateral (Sidebar) *@
    </div>

    <main>
        <div class="top-row px-4">
            <a href="/" target="_self">Volver a la Home</a>
        </div>

        <article class="content px-4">
            @Body @* Aquí se renderizará el contenido de la página (ej. AlumnosList.razor) *@
        </article>
    </main>
</div>

@code {
    // Si desea forzar que solo se use en rutas específicas (ej. /admin/...), 
    // debe configurar el Router o usar el atributo [Layout(typeof(AdminLayout))] 
    // en cada página de administración.
}